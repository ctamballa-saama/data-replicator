# DataReplicator Environment Configuration Example
# Rename this file to .env and adjust the values as needed

# Application settings
APP_NAME=DataReplicator
APP_VERSION=0.1.0
DEBUG=False

# API settings
API_HOST=127.0.0.1
API_PORT=8000
API_PREFIX=/api/v1

# Database settings
DATABASE_URL=sqlite:///datareplicator.db

# File storage settings
UPLOAD_DIR=./uploads
OUTPUT_DIR=./output

# Security settings
SECRET_KEY=replace_this_with_a_secure_random_string
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Data generation settings
DEFAULT_TARGET_SUBJECTS=100
MAX_TARGET_SUBJECTS=1000
ALLOW_PII_GENERATION=False

# Validation settings
APPLY_CDISC_RULES=True
